@{
    ViewData["Title"] = "Home Page";
}

 @using (Html.BeginForm("FilterForCountry", "Home", FormMethod.Post))
{
    <div class="mb-3">
        <h4 for="exampleInputEmail1" class="form-label">Поиск по названию</h4>
        <input required type="text" class="form-control" name="countryName" aria-describedby="emailHelp">
        <input class="btn btn-dark mt-2" type="submit" value="Найти" />
    </div>
    
}

<h4>Фильтры</h4>
<div class="container">
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <div class="row">
            <div class="col">
                <h5>Цвета</h5>
                @foreach (var color in ViewBag.Сolors)
                {
                <label>
                    <input class="form-check-input" type="checkbox" name="selectedColorsId" value="@color.Id" @(ViewBag.SelectedСolorsId.Contains(color.Id) ? "checked" : "") />
                    @color.Name
                </label>
                <br />
                }
            </div>
            <div class="col">
                <h5>Линии</h5>
                @foreach (var lines in ViewBag.Lines)
                {
                <label>
                        <input class="form-check-input" type="checkbox" name="selectedLinesId" value="@lines.Id" @(ViewBag.SelectedLinesId.Contains(lines.Id) ? "checked" : "") />
                    @lines.Name
                </label>
                <br />
                }
            </div>
        </div>
        <input class="btn btn-dark mt-2" type="submit" value="Найти" />
    }
</div>

    
<div class="container">
    <div class="row">
        @foreach (var i in ViewBag.Flags)
        {
            <div class="col-md-3">
                <div class="card m-4" style="width: 18rem;">
                    <img src="~/images/@i.ImageName" class="card-img-top" alt="@i.CountryName">
                    <div class="card-body">
                        <h5 class="card-title">@i.CountryName</h5>
                        @Html.ActionLink("Подробнее", "Flag", "Home", new { id = @i.Id }, new { @class = "btn btn-dark" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>

